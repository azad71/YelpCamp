<% include ../partials/header %>

<div class="container">
   <div class="jumbotron">
      <h1>This is the campgrounds page</h1>
      <p>View our hand-picked campgrounds from all over the worlds</p>
      <p>
         <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New CampGround</a>
      </p>
   </div>
</div>

<div class="container content-row">
   <div class="row">
      
   <% campgrounds.forEach(function(camp){ %>
      <div class="col-lg-3 mb-3 col-sm-12">
         <div class="card h-100">
            <img class="card-img-top" src="<%= camp.image %>">
            <div class="card-body">
                <h4 class="card-title text-center"><%= camp.name %></h4>
                <p class="card-text"> <%= camp.desc.slice(0,100) + "...." %> </p>
               <a href="/campgrounds/<%= camp._id %> " class="btn btn-outline-primary">Read More...</a>
            </div>
         </div>
      </div> 
   <% }); %>
   </div>
</div>

<% include ../partials/footer %>