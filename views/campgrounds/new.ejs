<% include ../partials/header %>


<section id="addCamp">
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <div class="card">
          <div class="card-header text-center">
            <h4>Create A New Campgrond</h4>
          </div>
            <div class="card-block">
              <form class="p-3" action="/campgrounds" method="POST">
                <div class="form-group">
                  <label class="form-control-label">Campgrond name</label>
                  <input type="text" name="campName" placeholder="Add a campground" class="form-control">
                </div>
                <div class="form-group">
                  <label class="form-control-label">Image URL</label>
                  <input type="text" name="imgurl" placeholder="Add Image URL" class="form-control">
                </div>
                <div class="form-group">
                  <label class="form-control-label">Camping Price</label>
                  <input type="number" name="price" placeholder="$" class="form-control" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                  <label for="comment">Description : </label>
                  <textarea class="form-control" rows="5" name="desc" placeholder="Write something about this campground..."></textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
              </form>
            </div>
        </div>
      </div>
    </div>
  </div>
</section>


<% include ../partials/footer %>