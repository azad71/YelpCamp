<% include ../partials/header %>

<section id="addCamp">
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <div class="card">
          <div class="card-header text-center">
            <h4>Edit <%=campground.name%></h4>
          </div>
            <div class="card-block">
              <form class="p-3" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                  <label class="form-control-label">Campgrond name</label>
                  <input type="text" name="campground[name]" value="<%= campground.name %>" class="form-control">
                </div>
                <div class="form-group">
                  <label class="form-control-label">Image URL</label>
                  <input type="text" name="campground[image]" value="<%= campground.image %>" class="form-control">
                </div>
                <div class="form-group">
                  <label class="form-control-label">Camping Price</label>
                  <input type="number" name="campground[price]" placeholder="$" value="<%= campground.price %>" class="form-control" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                  <label for="comment">Description : </label>
                  <textarea class="form-control" rows="5" name="campground[desc]"> <%= campground.desc %> </textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
              </form>
            </div>
        </div>
      </div>
    </div>
  </div>
</section>


<% include ../partials/footer %>
